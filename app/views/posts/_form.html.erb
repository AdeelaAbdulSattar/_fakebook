<%= form_with(model: @post, local: true)  do |f| %>

  <div class="input-group form-group">
    <%= f.text_area :text, autofocus: true, autocomplete: "text",rows: "4", class: "form-control", placeholder: "Enter text here.." %>
  </div>

  <div class="form-group">
    <%= f.submit "Post", class: "btn float-right btn-default btnbackground blue font font-12" %>
  </div>

<% end %>



