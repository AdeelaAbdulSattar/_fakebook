<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card background posts box my-2 ">
      <div class="row">
        <div class="col-md-10">
          <div class="card-header">
            <h6><%= link_to post.user.name, edit_post_path(post), { method: :get} %></h6>
            <h6><%=post.created_at.strftime("%d-%m-%Y")%>, <%=post.created_at.strftime("%I:%M %p")%></h6>
          </div>
        </div>
        <div class="col-md-2">
          <div class=" dropdown">
            <a class="test" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></a>
            <ul class="dropdown-menu box">
              <li><%= link_to 'Edit', edit_post_path(post), { method: :get, :class => 'dropdown-item'} %></li>
              <li><%= link_to 'Delete', destroy_post_post_path(post), method: :patch, data: { confirm: 'Are you sure?' }, :class => "dropdown-item" %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="card-body text-center ">
        <div class="row"><%= post.text%></div>
      </div>
      <div class="card-footer text-center">
        <div class="row">
          <div class=" col-md-4 border-right">
            <%= button_to "Like", posts_path(@post), { method: :get, class: "buttonhome btn font font-12  " } %>
          </div>
          <div class=" col-md-4 border-right ">
            <button class="buttonhome btn font font-12 showCommentbtn" id=<%= post.id %> type="button" >Comment</button>
          </div>
          <div class=" col-md-4 ">
            <%= button_to "View Comments", posts_path(@post), { method: :get, class: "  buttonhome btn font font-12 " } %>
          </div>
        </div>
			</div>

      <div class="card-footer text-center commentArea" data-id=<%= post.id %>>
        <div class="form-group shadow-textarea">
          <%= form_for :comment, url: comments_path do |f| %>
            <div class="row">
              <div class="col-md-10">
                <%= f.text_area :body, class:"form-control", rows: "1", placeholder: "Add comment here..."%>
                <%= f.hidden_field :commentable_id, value: "#{post.id}" %>
              </div>
              <div class="col-md-2">
                <%= f.submit "Submit", class: "buttonhome btn btnbackground blue font font-12" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center row ">
          <%= hidden_field_tag "post_id", post.id %>
          <%= render template: "comments/index"%>
        </div>
      </div>
    </div>
  </div>
</div>
