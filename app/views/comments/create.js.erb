$("#comments__response-text<%= @comment.commentable_id %>").val("");
if ("<%= @comment.commentable_type %>" == "Post") {
  $("#comments-text<%= @comment.commentable_id%>").fadeOut();
  $('div[data-post-id="<%= @comment.commentable_id %>"]').append(
    "<%= j render @comment%>"
  );
} else {
  $('div[data-comment-id="<%= @comment.commentable_id %>"]').append(
    "<%= j render @comment%>"
  );
}
