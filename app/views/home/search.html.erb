<div class="container " >
	<div class="d-flex justify-content-center h-100">
		<div class="card background posts wall">
			<div class="card-body" id="posts">
        <% if @posts.present? %>
          <%= render partial: "posts/post", collection:  @posts%>
          <div id="infinite-scrolling">
					  <%= will_paginate @posts %>
				</div>
        <% end %>

        <% if @comments.present? %>
          <%= render partial: "posts/post", collection:  @comments%>
          <%# <% @comments.each do |p|%>
          <%#= p.commentable_id %>
          <%#= p.body %>
          <%# end % > %>
        <% end %>

        <div class="row text-center">
          <% if @user_result.present? %>
            <div class="col-md-3"></div>
            <div class="col-md-9">
              <% @user_result.each do |u| %>
                <div class="row">
                  <h6><i class="fa fa-user-circle-o" aria-hidden="true"></i><%= link_to u.name, user_profile_home_path(u.id), { method: :get} %></h6><br/>
                </div>
                <div class="row">
                  <h6><%=u.created_at%></h6>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <% if !@posts.present? && !@comments.present? && !@user_result.present? %>
          <h6> No search results.. </h6>
        <% end %>

			</div>
		</div>
	</div>
</div>



