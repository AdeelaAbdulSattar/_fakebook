<% if false %>
  <%= render partial: "user", collection: @users%>
<% end %>

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card background posts wall">
			<div class="card-body">
				<div class="row ">
					<%= render template: "posts/new"%>
					<div class="row ">
						<div class=" col-md-6 text-center ">
							<%= button_to 'New Post' , new_post_path, method: :get, class: "my-2 button font font-12 buttonhome btn btnbackground blue" %>
						</div>
						<div class=" col-md-6 text-center ">
							<%= button_to 'Your Posts' , posts_path, method: :get, class: "my-2 button font font-12 buttonhome btn btnbackground blue" %>
						</div>
					</div>
					<%= render partial: "posts/post", collection: @posts%>
				</div>
			</div>
		</div>
	</div>
</div>
