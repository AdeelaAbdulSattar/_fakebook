<% if false %>
  <%= render partial: "user", collection: @users%>
<% end %>

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="row">
			<div class="col-md-4">
				<div class="card background home-bar">
					<div class="card-header text-center">
						<h3>Home<span class="pull-right hidden-xs showopacity glyphicon glyphicon-home"></span></h3>
					</div>
					<div class="card-body">
						<div class="row ">
							<div class=" col-md-12 text-center ">
								<%= button_to 'New Post' , new_post_path, method: :get, class: "my-2 button font font-12 buttonhome btn btnbackground blue" %>
								<%= button_to 'Your Posts' , posts_path, method: :get, class: "my-2 button font font-12 buttonhome btn btnbackground blue" %>
								<%= button_to 'Others Posts' , other_post_posts_path, method: :get, class: "my-2 button font font-12 buttonhome btn btnbackground blue"%>
							</div>
						</div>
					</div>
					<div class="card-footer"></div>
				</div>
			</div>
			<div class="col-md-8">
				<div class="card background home">
					<div class="card-body">
						<div class="row ">
							<div class=" col-md-12 text-center ">
								<%= render partial: "posts/post", collection: @posts%>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
