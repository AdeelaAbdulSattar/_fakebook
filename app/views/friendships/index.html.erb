<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card background friends">
      <div class="card-header">
				<% if @friends.present? %>
        <h3>Friends</h3>
          <%= will_paginate @friends %>
          <div class="row">
            <div class=" col-md-9">
              <div class="row">
                <div class=" col-sm-3 "> Name</div>
                <div class=" col-sm-6 "> Email</div>
                <div class=" col-sm-2 margin"> id</div>
              </div>
            </div>
          </div>
        <% else %>
          <h3>No Friends Exists</h3>
        <% end %>
      </div>
      <div class="card-body">
        <% if @friends.present? %>
          <%= render partial: "friend", collection: @friends, locals: { is_friend: true }%>
        <% end %>
			</div>
      <div class="card-footer">
        <%= will_paginate @friends %>
      </div>
    </div>
  </div>
</div>
