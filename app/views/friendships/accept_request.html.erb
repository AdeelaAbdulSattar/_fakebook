<%= form_for(@friend, url: { action: "accept_or_reject_request", id: @friend }) do |form| %>
  <p>
    <%= form.label :Request %><br>
    <%= form.radio_button :status, 'true'%>
    <%= form.label :status, "Accept" %><br>
    <%= form.radio_button :status, 'false', :checked => true %>
    <%= form.label :status, "Reject" %><br>
    <%= form.submit 'Update' %>
  </p>
<% end %>
<%= button_to "Back", requests_received_friendships_path(@friend), { method: :get, class: :buttonhome } %>
