<div class="container " >
	<div class="d-flex justify-content-center h-100">
		<div class="card background posts wall">
			<div class="card-body">
					<div class="row"><%= render template: "posts/new" %></div>
					<div class="row" id="posts">
						<% if @posts.present? %>
							<%= render partial: "posts/post", collection:  @posts%>
						<% else %>
							<p> No Posts Available </p>
						<% end %>
					</div>
				<div id="infinite-scrolling">
					<%= will_paginate @posts %>
				</div>
			</div>
		</div>
	</div>
</div>
