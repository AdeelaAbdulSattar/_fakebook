<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card background forgot-password">
      <div class="card-header">
				<h3>Forgot your password?</h3>
			</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource%>

          <div class="input-group form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.submit "Send", class: "btn float-right btn-default btn-background blue font font-12" %>
            <br /><%= f.label :Send_me_reset_password_instructions, class: "font font-12"%>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
				<%= render "devise/shared/links"%>
			</div>
    </div>
  </div>
</div>
