<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card background reset-password">
      <div class="card-header">
				<h3>Change your password</h3>
			</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <div class="font font-12"> <%= render "devise/shared/error_messages", resource: resource%></div>
          <%= f.hidden_field :reset_password_token %>
          <div class="  form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New password" %>
            <% if @minimum_password_length %>
              <em class="font font-12">(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          </div>

          <div class="field input-group form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
          </div>

          <div class="form-group actions">
            <%= f.submit "Change my password", class: "btn float-right btn-default btn-background blue font font-12" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
				<%= render "devise/shared/links"%>
			</div>
    </div>
  </div>
</div>
